<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:paddingLeft="14dp"
    android:paddingRight="14dp"
    android:paddingTop="6dp"
    android:paddingBottom="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="0dp"
        android:layout_margin="0dp">

        <TextView
            android:id="@+id/event_title_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ice Cream Fundraiser"
            android:textColor="@color/orange"
            android:textSize="16sp"
            android:maxLines="1"
            android:ellipsize="end"
            android:includeFontPadding="false"
            android:padding="0dp"
            android:layout_margin="0dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/hosting_org_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Association of Computer Machinery"
            android:maxLines="1"
            android:ellipsize="end"
            android:includeFontPadding="false"
            android:padding="0dp"
            android:layout_margin="0dp"
            android:textColor="@color/orange"/>

        <TextView
            android:id="@+id/event_location_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/orange"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:ellipsize="end"
            android:padding="0dp"
            android:layout_margin="0dp"
            android:text="Engineering Bldg, Rm 1.298"/>

        <TextView
            android:id="@+id/event_time_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:layout_gravity="bottom|left"
            android:text="12:15 - 1:15 PM"
            android:padding="0dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_margin="0dp"
            android:textColor="@color/orange"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="bottom"
        android:gravity="bottom">

        <TextView
            android:id="@+id/category_tags"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/orange"
            android:text="#fundraiser #food #icecream"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_weight="1"
            android:layout_marginRight="8dp"/>

        <TextView
            android:id="@+id/event_num_likes_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="98"/>

        <LinearLayout
            android:id="@+id/event_like_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="bottom"
            android:paddingTop="4dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true">

            <ImageView
                android:id="@+id/thumbs_up_image_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:src="@drawable/thumb_up_gray"
                android:clickable="false"
                android:background="@android:color/transparent"/>

            <!--<TextView
                android:id="@+id/like_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Like"/>-->

        </LinearLayout>

    </LinearLayout>

</FrameLayout>
